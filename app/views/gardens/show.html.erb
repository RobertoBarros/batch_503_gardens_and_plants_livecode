<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @garden.image_url %>);">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>

<div class="container mt-4">

  <div class="cards">
    <% @garden.plants.each do |plant| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= plant.image_url %>)">
          <%= plant.name %>
          <%= link_to plant_path(plant), method: :delete, class: 'ml-2 btn btn-outline-danger' do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </div>
    <% end %>
  </div>


</div>



<div class="container">
  <div class="row justify-content-center ">
    <h1>New Plant</h1>
  </div>


  <div class="row justify-content-center">
    <div class="col-4">

      <%= simple_form_for [@garden, @plant] do |f| %>

        <%= f.input :name %>
        <%= f.input :image_url %>
        <%= f.submit 'New Plant', class: 'btn btn-primary btn-block' %>

      <% end %>

    </div>
  </div>
</div>

